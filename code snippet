#include <iostream>

class MyClass {
public:
    static void StaticMethod() {
        std::cout << "Static method called." << std::endl;
    }

    void NonStaticMethod() {
        std::cout << "Non-static method called." << std::endl;
    }

    static void CallingStaticMethod() {
        StaticMethod();
        NonStaticMethod();
    }

    void CallingNonStaticMethod() {
        StaticMethod();
        NonStaticMethod();
    }
};

int main() {
    MyClass::CallingStaticMethod();

    MyClass object;
    object.CallingNonStaticMethod();

    return 0;
}

/*
- A static member function can only call another static member function.
- A nonstatic member function can call both static and non-static member functions.
*/
